{
  "name": "pub.sub",
  "version": "0.1.0",
  "description": "Topic-based PubSub pattern implementation for TypeScript",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "sideEffects": false,
  "scripts": {
    "minor": "npm version minor",
    "patch": "npm version patch",
    "test": "jest --coverage",
    "build": "rm -rf dist; npm run build:lib -- --analyze=verbose; tsc --emitDeclarationOnly",
    "build:lib": "esbuild ./index.ts --bundle --platform=neutral --outdir=dist --target=es2015 --minify --tree-shaking=true --sourcemap=external --format=esm",
    "update": "npx npm-check-updates -u"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "esbuild": "^0.19.5",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adv0cat/pub.sub.git"
  },
  "keywords": [
    "pubsub",
    "topic",
    "event",
    "pub",
    "sub",
    "publish",
    "subscribe",
    "emitter",
    "events",
    "once",
    "pub-sub",
    "pub/sub",
    "publish/subscribe"
  ],
  "author": "adv0cat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adv0cat/pub.sub/issues"
  },
  "homepage": "https://github.com/adv0cat/pub.sub#readme",
  "files": [
    "./dist/index.*"
  ]
}
